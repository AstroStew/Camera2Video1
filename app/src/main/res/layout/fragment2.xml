<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c00034"
    >
<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/ic_photo_camera_black_24dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/imageView3" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:alpha="0.25"

        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView5" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/camerafeatures"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="174dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="
~JPEG Capture (default)\r\n
~RAW Capture \r\n
~PNG Screenshot \r\n
~PNG from RAW \r\n
~Introvolemeter (Long Click on Capture Button) \r\n
~Resolution Change \r\n
~Custom and Preset White Balances \r\n
~Lock White Balance \r\n
~ISO change \r\n
~Scenes \r\n
~Effects \r\n
~Change Shutter Speed \r\n

"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>