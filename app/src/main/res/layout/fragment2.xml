<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c00034"
    >
<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/ic_camera_black_24dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/imageView3" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:text="Camera Features"
        android:textStyle="italic"
        android:textAlignment="center"


        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="
~JPEG Capture (default)\r\n
~RAW Capture \r\n
~PNG Screenshot \r\n
~PNG from RAW \r\n
~Introvolemeter (Long Click on Capture Button) \r\n
~Resolution Change \r\n
~Custom and Preset White Balances \r\n
~Lock White Balance \r\n
~ISO change \r\n
~Scenes \r\n
~Effects \r\n
~Change Shutter Speed \r\n

"
        android:layout_below="@+id/textView2"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />
</RelativeLayout>