<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<ListPreference

    android:key="resolution_list"
    android:negativeButtonText="@null"
    android:positiveButtonText="@null"
    android:title="Change Resolution"


    />
    <ListPreference

        android:title="Test Patterns"
        android:key="sensor_available_test_modes"
        android:defaultValue="0"
        />
    <ListPreference
        android:title="Edge Options"
        android:key="edge_options"
        android:defaultValue="1"
        />
    <ListPreference
        android:title="Hot Pixel Mode"
        android:key="hot_pixel_mode"
        />
    <EditTextPreference
        android:title="Set JPEG Quality"
        android:key="set_jpeg_quality"
        android:inputType="number"
        android:hint="Number between 1-100"
        />
    <EditTextPreference
        android:title="Change Black Level"
        android:key="change_black_level"
        />
    <ListPreference
        android:title="Tonemap Mode"
        android:key="tonemap_mode"

        />
    <SwitchPreference
        android:title="Read Raw pixels on Tap"
        android:key="readRawonTap"
        />
    <SwitchPreference
        android:title="Convert RAw pixels to PNG"
        android:key="ConvertRAWtoPNG"
        android:dependency="readRawonTap"
        />

</PreferenceScreen>