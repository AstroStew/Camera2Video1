<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yorku.mstew.camera2videoimage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/emblem6"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yorku.mstew.camera2videoimage.Camera2VideoImageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yorku.mstew.camera2videoimage.Page" />
        <activity
            android:name="com.yorku.mstew.camera2videoimage.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.yorku.mstew.camera2videoimage.TabedMenuActivity"
            android:label="@string/title_activity_tabed_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yorku.mstew.camera2videoimage.ViewPagerMainActivity"
            android:label="ViewPagerMainActivity" />
    </application>

</manifest>